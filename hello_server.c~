#include <sys/types.h>
#include <sys/socket.h>

#define PORT 5000

int main() {

	struct sockaddr_in addr, cliaddr;
	socklen_t cliaddr_len = sizeof(cliaddr);
	int backlog = 10, connfiledesc;

	
	int filedesc = socket(AF_INET, SOCK_STREAM, 0);
	if(filedesc == -1) {
		//handle error
	}

	addr.sin_addr.s_addr = INADDR_ANY;
	addr.sin_family = AF_INET;
	addr.sin_port = htons(PORT);

	if(bind(filedesc, (struct sockaddr *) &addr, sizeof(addr)) == -1) {
		//handle error
	}
	
	if(listen(filedesc, backlog) == -1) {
		//handle error
	}

	if(connfiledesc = accept(filedesc, (struct sockaddr *) & cliaddr, &cliaddrlen) == -1) {
		//handle error
	}

	//read and print
	//close connection
	//exit

	return 0;
}
